<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAB44C"
    tools:context=".SplashActivity">


    <ImageView
        android:id="@+id/ImgLogoSplash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtCookie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImgLogoSplash"
        android:layout_centerInParent="true"
        android:text="CookiÃª"
        android:fontFamily="@font/dancingscriptvariablefontwght"
        android:textColor="#844B36"
        android:textSize="40dp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pgbSplash"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCookie"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:indeterminate="true"
        app:indicatorColor="#78412D" />

</RelativeLayout>